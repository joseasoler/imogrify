{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base-workflow",
			"binaryDir": "build/${presetName}",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
				"IMOGRIFY_BUILD_UNIT_TESTS": "ON",
				"IMOGRIFY_CMAKE_VERBOSE": "ON"
			}
		},
		{
			"name": "tool-clang-format",
			"hidden": true,
			"cacheVariables": {
				"IMOGRIFY_CLANG_FORMAT": "ON"
			}
		},
		{
			"name": "tool-clang-tidy",
			"hidden": true,
			"cacheVariables": {
				"IMOGRIFY_CLANG_TIDY": "ON"
			}
		},
		{
			"name": "pkg-system",
			"hidden": true
		},
		{
			"name": "pkg-vcpkg",
			"hidden": true,
			"cacheVariables": {
				"IMOGRIFY_USE_LIBCPUID": "ON",
				"VCPKG_OVERLAY_PORTS": {
					"type": "FILEPATH",
					"value": "${sourceDir}/cmake/vcpkg/ports"
				},
				"VCPKG_OVERLAY_TRIPLETS": {
					"type": "FILEPATH",
					"value": "${sourceDir}/cmake/vcpkg/triplets"
				},
				"CMAKE_TOOLCHAIN_FILE": {
					"type": "FILEPATH",
					"value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
				}
			}
		},
		{
			"name": "os-linux",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "os-windows",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "compiler-clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "compiler-gcc",
			"hidden": true
		},
		{
			"name": "compiler-msvc",
			"hidden": true
		},
		{
			"name": "build-debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"IMOGRIFY_USE_LIBASSERT": "ON"
			}
		},
		{
			"name": "build-release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "triplet-vcpkg-linux-gcc",
			"hidden": true,
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "imfy-x64-linux-gcc"
			}
		},
		{
			"name": "triplet-vcpkg-linux-clang",
			"hidden": true,
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "imfy-x64-linux-clang"
			}
		},
		{
			"name": "triplet-vcpkg-windows-msvc",
			"hidden": true,
			"cacheVariables": {
				"VCPKG_TARGET_TRIPLET": "imfy-x64-windows-msvc"
			}
		},
		{
			"name": "system-linux-gcc-release",
			"inherits": [
				"base-workflow",
				"pkg-system",
				"os-linux",
				"compiler-gcc",
				"build-release"
			]
		},
		{
			"name": "vcpkg-linux-gcc-debug",
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-linux",
				"compiler-gcc",
				"build-debug",
				"triplet-vcpkg-linux-gcc"
			]
		},
		{
			"name": "vcpkg-linux-gcc-release",
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-linux",
				"compiler-gcc",
				"build-release",
				"triplet-vcpkg-linux-gcc"
			]
		},
		{
			"name": "vcpkg-linux-clang-debug",
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-linux",
				"compiler-clang",
				"build-debug",
				"triplet-vcpkg-linux-gcc"
			]
		},
		{
			"name": "vcpkg-linux-clang-release",
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-linux",
				"compiler-clang",
				"build-release",
				"triplet-vcpkg-linux-gcc"
			]
		},
		{
			"name": "vcpkg-windows-msvc-debug",
			"cacheVariables": {
				"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
			},
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-windows",
				"compiler-msvc",
				"build-debug",
				"triplet-vcpkg-windows-msvc"
			]
		},
		{
			"name": "vcpkg-windows-msvc-release",
			"cacheVariables": {
				"CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
			},
			"inherits": [
				"base-workflow",
				"pkg-vcpkg",
				"os-windows",
				"compiler-msvc",
				"build-release",
				"triplet-vcpkg-windows-msvc"
			]
		},
		{
			"name": "dev-linux-debug",
			"inherits": [
				"vcpkg-linux-gcc-debug",
				"tool-clang-format",
				"tool-clang-tidy"
			]
		},
		{
			"name": "dev-linux-release",
			"inherits": [
				"vcpkg-linux-gcc-release",
				"tool-clang-format",
				"tool-clang-tidy"
			]
		},
		{
			"name": "dev-windows-debug",
			"inherits": [
				"vcpkg-windows-msvc-debug",
				"tool-clang-format",
				"tool-clang-tidy"
			]
		},
		{
			"name": "dev-windows-release",
			"inherits": [
				"vcpkg-windows-msvc-release",
				"tool-clang-format",
				"tool-clang-tidy"
			]
		}
	],
	"buildPresets": [
